    "project-settings": [
      {
        "key":"log_lifetime",
        "name":"clear logs after (days)",
        "type":"text"
      },
      {
        "key":"endpoint_settings",
        "name":"module endpoint",
        "type":"sub_settings",
        "repeatable":"true",
        "sub_settings":[
          {
            "key":"endpoint_id",
            "name":"endpoint ID",
            "type":"text",
            "required": true
          },{
            "key":"endpoint_url",
            "name":"endpoint URL",
            "type":"text",
            "required": true
          },{
            "key":"endpoint_username",
            "name":"username (optional)",
            "type":"text"
          },{
            "key":"endpoint_password",
            "name":"password (optional)",
            "type":"password"
          }
        ]
      }
    ],
    "links": {
      "project": [
        {
          "name": "Mirth Logs",
          "icon": "report",
          "url": "MirthLog.php"
        }
      ],
      "control-center": []
    },
    "crons": [
		    {
			    "cron_name": "clean_redcap_mirth_client_logs",
			    "cron_description": "Daily cron that cleans up old logs",
			    "method": "cleanLogs",
			    "cron_frequency": "86400",
			    "cron_max_run_time": "60"
		    }
    ],
